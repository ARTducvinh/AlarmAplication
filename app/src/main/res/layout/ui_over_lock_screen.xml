<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#456767"
    android:orientation="vertical"
    tools:context=".UIOverLockScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGoalUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Đăng kí học phần"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewHourUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center|center_horizontal"
            android:text="19:04"
            android:textColor="@color/white"
            android:textSize="80sp"
            tools:ignore="Deprecated" />

        <TextView
            android:id="@+id/textViewDateUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center|center_horizontal"
            android:text="30 thg 10 Thứ Bảy"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/imageViewTimeAgainUI"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="110dp"
            android:background="@drawable/custom_background_time_again_center"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Báo lại sau 5\nphút"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/swipUpToClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ic_expand_less"
        android:backgroundTint="@color/brown"
        android:gravity="center_horizontal|center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal|center"
        android:text="Trượt lên để tắt"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>